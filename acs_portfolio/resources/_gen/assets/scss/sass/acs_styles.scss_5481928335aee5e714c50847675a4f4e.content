*{box-sizing:border-box}.toc,#TableOfContents{position:fixed;left:3em;top:5em;padding:1em;width:14em;height:100%;line-height:2}.toc ul,#TableOfContents ul{list-style:none;padding:0;margin:0}.toc ul ul,#TableOfContents ul ul{padding-left:2em}.toc li a,#TableOfContents li a{display:inline-block;color:#aaa;text-decoration:none;transition:all .3s cubic-bezier(.23,1,.32,1)}.toc li.visible>a,#TableOfContents li.visible>a{color:#111;transform:translate(5px)}.toc-marker{position:absolute;top:0;left:0;width:100%;height:100%;z-index:-1}.toc-marker path{transition:all .3s ease}